---
interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "SIMIS", 
  description = "AI-powered medical device guidance"
} = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <meta name="apple-mobile-web-app-title" content="SIMIS" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="stylesheet" href="https://use.typekit.net/tqq8wjv.css">
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  @import '../index.css';
</style>
