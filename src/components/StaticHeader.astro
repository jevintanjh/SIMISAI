---
export interface Props {
  title?: string;
  subtitle?: string;
  showBackButton?: boolean;
  onBack?: () => void;
}

const { 
  title = "SIMIS AI", 
  subtitle = "AI-powered medical device guidance",
  showBackButton = false,
  onBack
} = Astro.props;
---

<header class="bg-transparent text-white p-6 relative">
  <div class="flex items-center gap-4">
    {showBackButton && (
      <button 
        class="bg-card/50 border border-border backdrop-blur-sm cursor-pointer hover:bg-white/10 transition-colors rounded-lg p-3"
        onclick={onBack}
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
      </button>
    )}
    
    <div class="flex-1">
      <h1 class="text-2xl font-bold">{title}</h1>
      {subtitle && <p class="text-white/70 text-sm">{subtitle}</p>}
    </div>
  </div>
</header>
