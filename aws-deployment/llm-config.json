{
    "llm_provider": "openai",
    "fallback_provider": "sagemaker",
    "providers": {
        "openai": {
            "name": "OpenAI GPT-4",
            "endpoint": "https://api.openai.com/v1/chat/completions",
            "model": "gpt-4",
            "status": "active",
            "description": "Fast, reliable for demo"
        },
        "sagemaker": {
            "name": "Sealion LLM (27B)",
            "endpoint": "https://runtime.sagemaker.us-east-1.amazonaws.com/endpoints/simisai-sealion-realtime-endpoint/invocations",
            "model": "sealion-27b",
            "status": "deploying",
            "description": "Custom medical AI model"
        }
    },
    "auto_switch": true,
    "switch_conditions": {
        "sagemaker_ready": true,
        "min_requests": 5
    }
}
