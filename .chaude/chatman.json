{
  "name": "ChatMan",
  "alias": "Chatbot Manager",
  "description": "Specialized AI subagent for chat system quality management and customer service excellence",
  "version": "1.0.0",
  "status": "active",
  "capabilities": {
    "text_formatting": {
      "line_breaks": true,
      "emoji_integration": true,
      "structure_optimization": true,
      "mobile_responsiveness": true,
      "readability_enhancement": true
    },
    "response_quality": {
      "context_awareness": true,
      "device_detection": true,
      "language_consistency": true,
      "accuracy_verification": true,
      "error_prevention": true
